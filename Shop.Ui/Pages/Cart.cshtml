@page
@model CartModel
@{
}

            <form method="post">
<div class="container">
    <div class="columns">

        <div class="column is-8 is-offset-2">

                @foreach (var product in Model.Cart)
                {
                    <div class="level">

                        <div class="level-item">
                            <figure class="image is-128x128">
                                <img src="~/images/White t-shirt.jpg" />
                            </figure>
                        </div>
                        <div class="level-item">
                            <p class="title">
                                @product.Name
                            </p>
                        </div>
                        <div class="level-item is-hidden-mobile">
                            <p>@product.Qty</p>
                        </div>
                        <div class="level-item">
                            <p>@product.Value</p>
                        </div>
                        <div class="control">
                            <input type="hidden" asp-for="@Model.SelectedProduct.Qty" value="@product.Qty" />
                            <input type="hidden" asp-for="@Model.SelectedProduct.StockId" value="@product.StockId" />
                            <button class="button is-danger" type="submit">Delete</button>
                        </div>
                    </div>
            }

                <div class="has-text-right">
                    <a asp-page="/Index" class="button is-text">Back to main</a>
                    <a asp-page="/Checkout/CustomerInformation" class="button is-success">Checkout</a>
                </div>

            </div>
    </div>
</div>
                </form>

