@inject IAuthorizationService  authService

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.Ui</title>

    <environment include="Development">
        <link href="~/lib/bulma-0.7.5/css/bulma.css" rel="stylesheet" />
    </environment>
    <environment exclude="Production">
        <link href="~/lib/bulma-0.7.5/css/bulma.min.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <h3 class="title has-text-centered">Admin Panel</h3>

    <div class="container">
        <div class="columns">
            <div class="column is-3">
                <div class="menu">
                    <p class="menu-label">Store menu</p>
                    <ul class="menu-list">
                        <li><a asp-page="/Admin/Index">Products</a></li>
                        <li><a asp-page="/Admin/OrderManagment">Managment</a></li>
                        <li><a asp-page="/Admin/Stock">Stock</a></li>
                    </ul>
                    @if ((await authService.AuthorizeAsync(User, "Admin")).Succeeded)
                    {
                    <p class="menu-label">Admin menu</p>
                    <ul class="menu-list">
                        <li><a asp-page="/Admin/Index">Configure Users</a></li>

                    </ul>
                    }
                    <p class="menu-label"></p>
                    <ul class="menu-list">
                        <li>    <a asp-page="/Index">Back to main</a></li>
                    </ul>
                </div>
            </div>
            <div class="column is-9">
                <product-manager v-if="menu === 0"></product-manager>
                <p v-else-if="menu === 1"></p>
                <p v-else-if="menu === 2"></p>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Shop.Ui</p>
        </footer>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
